extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center.mb-5
            p
                | Descubra las experiencias de nuestros clientes.

        include ./layout/layout_testimonio

        .row

            .col-md-12
                h2.d-block.w-100.text-center Agrega una Rese√±a

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center=error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonios" method="POST")
                        .form-group
                            label(style="font-weight: bold;", for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value=nombre)
                        .form-group
                            label(style="font-weight: bold;", for="correo") Correo Electronico
                            input#correo(type="text", placeholder="Tu correo electronico", name="correo", class="form-control", value=correo)
                        .form-group
                            label(style="font-weight: bold;", for="mensaje") Mensaje
                            textarea#mensaje(class="form-control", placeholder="Tu comentario", name="mensaje", rows=3)=mensaje
                        input.btn.btn-success.btn-block(type="submit")